@model IEnumerable<eShopSolution.Data.Entities.AppRole>
@{
    Layout="_Layout";
}
<div class="ml-2 mr-2 pl-1">
    <div class="row bg-primary">
        <h3 class="text-center text-white p-1">Danh sách phân quyền</h3>
    </div>
    <div class="row p-1">
        <div class="col-sm-4">
            <a class="btn btn-success text-light" asp-action="Create">Thêm quyền</a>
        </div>
        <div class="col-sm-4"></div>
        <div class="col-sm-4 d-flex justify-content-end">
             <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
                <div class="input-group">
                    <input class="form-control" type="text" placeholder="Tìm kiếm..." aria-label="Search" aria-describedby="basic-addon2" />
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="button"><i class="fas fa-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <table class="table">
        <thead>
            <th class="text-center" scope="col">Số thứ tự</th>
            <th class="text-center" scope="col">Tên quyền</th>
            <th class="text-center" scope="col">Thao tác</th>
        </thead>
        <tbody>
            @if(Model.Count()==0){
                <tr>Không có role</tr>
            }
            else{
                @foreach (var r in Model.Select((value,i)=>new{i,value}))
                {
                    <tr>
                        <th class="text-center" scope="row">@(r.i+1)</th>
                        <td class="text-center">@r.value.Name</td>
                        <td class="text-center">
                            <form method="POST" asp-action="Delete" asp-route-id="@r.value.Id">
                                <a class="btn btn-primary text-white">Sửa</a>
                                <button class="btn btn-danger" type="submit">Xóa</button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>